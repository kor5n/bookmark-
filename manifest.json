{
    "name": "bookmark++",
    "description": "bookmark for bookmarking positions in webpages",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
      "default_popup": "index.html"
    },
    "permissions": ["activeTab", "storage", "declarativeContent", "tabs", "scripting"],
    "host_permissions" : ["http://*/*", "https://*/*"],
    "background" : {
      "service_worker" : "background.js",
      "type" : "module"
    },
    "content_scripts" : [
      {
        "matches":["<all_urls>"],
        "js":["content.js"]
      }
    ]
}
